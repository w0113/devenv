[merge]
	tool = nvimmerge
[mergetool "nvimmerge"]
	cmd = nvim -c \"Gvdiffsplit!\" \"$MERGED\"
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[core]
	editor = nvim
[push]
	default = matching
[alias]
	tree = log --graph --oneline --decorate --all
